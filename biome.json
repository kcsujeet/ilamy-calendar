{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"root": true,
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"includes": ["**", "!examples", "!**/*.css"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 80
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"noLabelWithoutControl": "warn",
				"noStaticElementInteractions": "warn",
				"useKeyWithClickEvents": "warn",
				"useSemanticElements": "warn",
				"useButtonType": "warn"
			},
			"suspicious": {
				"noArrayIndexKey": "warn",
				"noExplicitAny": "warn",
				"noImplicitAnyLet": "warn",
				"noAssignInExpressions": "warn"
			},
			"correctness": {
				"noUnusedVariables": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"trailingCommas": "es5",
			"semicolons": "asNeeded"
		}
	},
	"css": {
		"parser": {
			"cssModules": false,
			"allowWrongLineComments": true
		},
		"formatter": {
			"enabled": false
		}
	},
	"overrides": [
		{
			"includes": ["*.test.ts", "*.test.tsx", "*.spec.ts", "*.spec.tsx"],
			"linter": {
				"rules": {
					"suspicious": {
						"noConsole": "off"
					}
				}
			}
		}
	]
}
